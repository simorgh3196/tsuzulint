{
    "name": "texide-vscode",
    "displayName": "Texide",
    "description": "Texide integration for VS Code",
    "version": "0.1.0",
    "publisher": "simorgh3196",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:markdown",
        "onLanguage:plaintext"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Texide",
            "properties": {
                "texide.executablePath": {
                    "type": "string",
                    "default": "texide",
                    "description": "Path to the texide executable. If not specified, look for 'texide' in PATH."
                },
                "texide.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "eslint": "^8.34.0",
        "typescript": "^4.9.5"
    }
}

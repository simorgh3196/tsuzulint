{
  "$schema": "https://raw.githubusercontent.com/simorgh3196/tsuzulint/main/schemas/v1/rule.json",
  "rule": {
    "name": "no-doubled-joshi",
    "version": "1.0.0",
    "description": "Detect repeated Japanese particles (助詞)",
    "repository": "https://github.com/simorgh3196/tsuzulint",
    "license": "MIT",
    "keywords": [
      "japanese",
      "grammar",
      "joshi",
      "particle"
    ],
    "fixable": true,
    "node_types": [
      "Str"
    ],
    "isolation_level": "block",
    "languages": [
      "ja"
    ],
    "capabilities": [
      "morphology"
    ]
  },
  "wasm": [
    {
      "url": "../target/wasm32-wasip1/release/tsuzulint_rule_no_doubled_joshi.wasm",
      "hash": "5d79dfdbe06168e24b28084c945c913b20cbf5c5ce4b2b57d4a5cf3b2cbd5370"
    }
  ],
  "options": {
    "type": "object",
    "properties": {
      "min_interval": {
        "type": "integer",
        "default": 1,
        "description": "Minimum interval between same particles (1 = consecutive with comma)"
      },
      "strict": {
        "type": "boolean",
        "default": false,
        "description": "Disable exception rules (の連体化, を格助詞, て接続助詞, 並立助詞, かどうか)"
      },
      "allow": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [],
        "description": "Particles to allow even if doubled (e.g., ['も', 'や'])"
      },
      "separator_characters": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          ".",
          "．",
          "。",
          "?",
          "!",
          "？",
          "！"
        ],
        "description": "Sentence separator characters"
      },
      "comma_characters": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          "、",
          "，"
        ],
        "description": "Comma characters that increase particle interval"
      },
      "suggest_fix": {
        "type": "boolean",
        "default": false,
        "description": "Whether to provide auto-fix suggestions"
      }
    }
  }
}

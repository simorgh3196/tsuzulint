{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug tsuzulint_cli",
            "cargo": {
                "args": ["build", "--bin=tzlint", "--package=tsuzulint_cli"],
                "filter": {
                    "name": "tzlint",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in package",
            "cargo": {
                "args": ["test", "--no-run", "--lib", "--package=${input:packageName}"],
                "filter": {
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        }
    ],
    "inputs": [
        {
            "id": "packageName",
            "type": "pickString",
            "description": "Select a package",
            "options": [
                "tsuzulint_ast",
                "tsuzulint_parser",
                "tsuzulint_plugin",
                "tsuzulint_cache",
                "tsuzulint_core",
                "tsuzulint_cli",
                "tsuzulint_lsp",
                "tsuzulint_wasm"
            ]
        }
    ]
}
